@{
	ViewData["Title"] = "CreateEditMember";
}

@model MemberModule.Models.Member;


<div class="text-center">
	<h1>Create or edit a member</h1>
</div>

<form asp-action="CreateEditMemberForm" asp-controller="Home">
	<label class="mt-4">First Name:</label>
	<input asp-for="FirstName" class="form-control" palceholder="First Name" />
	<label class="mt-4">Last Name:</label>
	<input asp-for="LastName" class="form-control" />
	<label class="mt-4">Email:</label>
	<input asp-for="Email" class="form-control" />
	<label class="mt-4">Active Status:</label>
	<input class="form-control" type="text" asp-for="Active" />

	<button type="submit" class="btn btn-primary mt-4">Submit Member</button>

</form>
